@page "/admin"
@using System.Net.Http.Json
@using Recipe_Sharing_Website.Data
@inject IHttpContextAccessor HttpContextAccessor
@inject NavigationManager Nav
@inject HttpClient Http

<h3>Admin Dashboard</h3>

@if (_loading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
else
{
    <h5>Premium Users</h5>

    @if (_premiumUsers.Count == 0)
    {
        <p>No premium users yet.</p>
    }
    else
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>UserId</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>IsPremium</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in _premiumUsers)
                {
                    <tr>
                        <td>@u.UserId</td>
                        <td>@u.Username</td>
                        <td>@u.Email</td>
                        <td>@u.IsPremium</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    private bool _loading = true;
    private string? _error;
    private List<PremiumUserDto> _premiumUsers = new();

    protected override async Task OnInitializedAsync()
    {
        if (HttpContextAccessor.HttpContext is not HttpContext ctx ||
            !AuthSession.IsLoggedIn(ctx.Session) ||
            !AuthSession.IsAdmin(ctx.Session))
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        try
        {
            var result = await Http.GetFromJsonAsync<List<PremiumUserDto>>("api/payments/premium-users");
            _premiumUsers = result ?? new List<PremiumUserDto>();
        }
        catch (Exception ex)
        {
            _error = $"Failed to load premium users from API. {ex.Message}";
        }
        finally
        {
            _loading = false;
        }
    }

    private class PremiumUserDto
    {
        public int UserId { get; set; }
        public string? Username { get; set; }
        public string? Email { get; set; }
        public bool IsPremium { get; set; }
    }
}
