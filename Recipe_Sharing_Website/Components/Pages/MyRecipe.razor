@page "/my-recipes"
@rendermode @(new Microsoft.AspNetCore.Components.Web.InteractiveServerRenderMode(prerender: false))

@using Microsoft.EntityFrameworkCore
@using Recipe_Sharing_Website.Data
@using Recipe_Sharing_Website.Models
@inject IDbContextFactory<AppDbContext> DbFactory
@inject IHttpContextAccessor HttpContextAccessor
@inject NavigationManager Nav

<h3>My Recipes</h3>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
else if (_recipes is null)
{
    <p>Loading...</p>
}
else if (_recipes.Count == 0)
{
    <p>You haven’t posted any recipes yet.</p>
    <a class="btn btn-primary" href="/recipes/create">Create Recipe</a>
}
else
{
    <ul class="list-unstyled">
        @foreach (var r in _recipes)
        {
            <li class="border rounded p-3 mb-2">
                <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                    <div>
                        <a class="fw-bold" href="/recipes/@r.RecipeId">@r.Title</a>
                        <div class="small">⭐ Avg: @r.AvgRatingText</div>
                    </div>

                    <div class="d-flex gap-2 flex-wrap">
                        <a class="btn btn-sm btn-outline-primary" href="/recipes/edit/@r.RecipeId">Edit</a>

                        @if (_confirmDeleteRecipeId == r.RecipeId)
                        {
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteConfirmed(r.RecipeId)">Yes, delete</button>
                            <button class="btn btn-sm btn-secondary" @onclick="CancelDelete">Cancel</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => AskDelete(r.RecipeId)">Delete</button>
                        }
                    </div>
                </div>

                @if (_confirmDeleteRecipeId == r.RecipeId)
                {
                    <div class="alert alert-warning mt-2 mb-0">
                        <b>Are you sure?</b> This will permanently delete the recipe and all feedback.
                    </div>
                }
            </li>
        }
    </ul>
}

@code {
    private List<Row>? _recipes;
    private string? _error;
    private int? _confirmDeleteRecipeId;

    private int? CurrentUserId =>
        HttpContextAccessor.HttpContext?.Session.GetString(AuthSession.UserIdKey) is string s &&
        int.TryParse(s, out var id) ? id : null;

    protected override async Task OnInitializedAsync()
    {
        if (!CurrentUserId.HasValue)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        await LoadMine();
    }

    private async Task LoadMine()
    {
        try
        {
            _error = null;
            await using var db = await DbFactory.CreateDbContextAsync();

            var uid = CurrentUserId!.Value;

            _recipes = await db.Recipes
                .Where(r => r.UserId == uid)
                .OrderByDescending(r => r.RecipeId)
                .Select(r => new Row
                {
                    RecipeId = r.RecipeId,
                    Title = r.Title
                })
                .ToListAsync();

            foreach (var row in _recipes)
            {
                row.AvgRating = await db.Feedbacks
                    .Where(f => f.RecipeId == row.RecipeId && f.Rating != null)
                    .Select(f => (double?)f.Rating)
                    .AverageAsync();

                row.AvgRatingText = row.AvgRating.HasValue ? row.AvgRating.Value.ToString("0.0") : "—";
            }
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private void AskDelete(int recipeId) => _confirmDeleteRecipeId = recipeId;
    private void CancelDelete() => _confirmDeleteRecipeId = null;

    private async Task DeleteConfirmed(int recipeId)
    {
        try
        {
            _error = null;

            if (!CurrentUserId.HasValue)
            {
                _error = "You must be logged in.";
                return;
            }

            await using var db = await DbFactory.CreateDbContextAsync();

            var recipe = await db.Recipes.FirstOrDefaultAsync(r => r.RecipeId == recipeId);
            if (recipe is null)
            {
                _error = "Recipe not found.";
                _confirmDeleteRecipeId = null;
                return;
            }

            if (recipe.UserId != CurrentUserId.Value)
            {
                _error = "You can only delete your own recipes.";
                _confirmDeleteRecipeId = null;
                return;
            }

            var feedbacks = await db.Feedbacks.Where(f => f.RecipeId == recipeId).ToListAsync();
            db.Feedbacks.RemoveRange(feedbacks);

            db.Recipes.Remove(recipe);
            await db.SaveChangesAsync();

            _confirmDeleteRecipeId = null;
            await LoadMine();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            _confirmDeleteRecipeId = null;
        }
    }

    private class Row
    {
        public int RecipeId { get; set; }
        public string Title { get; set; } = "";
        public double? AvgRating { get; set; }
        public string AvgRatingText { get; set; } = "—";
    }
}
