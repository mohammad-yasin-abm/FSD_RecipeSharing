@using Recipe_Sharing_Website.Data
@inject IHttpContextAccessor HttpContextAccessor

<div class="top-row px-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">RecipeHub</a>

        @if (IsLoggedIn)
        {
            <span class="text-light">
                (@Username)
                @if (IsPremium)
                {
                    <span class="badge bg-warning text-dark ms-2">Premium</span>
                }
            </span>
        }
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <a class="nav-link" href="/">Home</a>
        </div>

        <div class="nav-item px-3">
            <a class="nav-link" href="/recipes">Recipes</a>
        </div>

        @if (IsLoggedIn)
        {
            <div class="nav-item px-3">
                <a class="nav-link" href="/recipes/create">Add Recipe</a>
            </div>

            <div class="nav-item px-3">
                <a class="nav-link" href="/premium">Premium</a>
            </div>

            @if (IsAdmin)
            {
                <div class="nav-item px-3">
                    <a class="nav-link" href="/admin">Admin</a>
                </div>
            }

            <div class="nav-item px-3">
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <a class="nav-link" href="/login">Login</a>
            </div>

            <div class="nav-item px-3">
                <a class="nav-link" href="/register">Register</a>
            </div>
        }
    </nav>
</div>

@code {
    private bool IsLoggedIn =>
        HttpContextAccessor.HttpContext is HttpContext ctx &&
        AuthSession.IsLoggedIn(ctx.Session);

    private bool IsAdmin =>
        HttpContextAccessor.HttpContext is HttpContext ctx &&
        AuthSession.IsAdmin(ctx.Session);

    private bool IsPremium =>
        HttpContextAccessor.HttpContext is HttpContext ctx &&
        AuthSession.IsPremium(ctx.Session);

    private string Username =>
        HttpContextAccessor.HttpContext is HttpContext ctx
            ? (AuthSession.GetUsername(ctx.Session) ?? "User")
            : "User";
}
