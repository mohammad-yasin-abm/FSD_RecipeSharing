@page "/recipes"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.WebUtilities
@using Recipe_Sharing_Website.Data
@using Recipe_Sharing_Website.Models
@inject IDbContextFactory<AppDbContext> DbFactory
@inject NavigationManager Nav

<h3>Recipes</h3>

<div class="mb-3">
    <input class="form-control"
           placeholder="Search by title or ingredients..."
           @bind="_search"
           @bind:event="oninput" />

    <button class="btn btn-primary mt-2" @onclick="Search">
        Search
    </button>

    @if (!string.IsNullOrWhiteSpace(_search))
    {
        <button class="btn btn-outline-secondary mt-2 ms-2" @onclick="ClearSearch">
            Clear
        </button>
    }
</div>

@if (_loading)
{
    <p>Loading recipes...</p>
}
else if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
else if (_recipes is null || !_recipes.Any())
{
    <p>No recipes found.</p>
}
else
{
    <ul class="list-group">
        @foreach (var r in _recipes)
        {
            <li class="list-group-item">
                <h5>@r.Title</h5>

                @if (!string.IsNullOrWhiteSpace(r.Description))
                {
                    <p>@r.Description</p>
                }

                <small class="text-muted">
                    Ingredients: @Shorten(r.IngredientsText)
                </small>

                <div class="mt-2">
                    <a class="btn btn-sm btn-outline-primary"
                       href="/recipes/@r.RecipeId">
                        View
                    </a>
                </div>
            </li>
        }
    </ul>
}

@code {
    private List<Recipe>? _recipes;
    private bool _loading = true;
    private string? _error;
    private string _search = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Read query string (?q=...)
            var uri = Nav.ToAbsoluteUri(Nav.Uri);
            var query = QueryHelpers.ParseQuery(uri.Query);

            if (query.TryGetValue("q", out var q))
            {
                _search = q.ToString();
            }

            await LoadRecipes();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task LoadRecipes()
    {
        await using var db = await DbFactory.CreateDbContextAsync();

        IQueryable<Recipe> query = db.Recipes
            .AsNoTracking()
            .OrderByDescending(r => r.RecipeId);

        if (!string.IsNullOrWhiteSpace(_search))
        {
            var s = _search.Trim();

            query = query.Where(r =>
                r.Title.Contains(s) ||
                r.IngredientsText.Contains(s));
        }

        _recipes = await query.ToListAsync();
    }

    private async Task Search()
    {
        var encoded = Uri.EscapeDataString(_search ?? "");
        Nav.NavigateTo($"/recipes?q={encoded}", false);

        _loading = true;
        await LoadRecipes();
        _loading = false;
    }

    private async Task ClearSearch()
    {
        _search = "";
        Nav.NavigateTo("/recipes", false);

        _loading = true;
        await LoadRecipes();
        _loading = false;
    }

    private static string Shorten(string? text)
    {
        if (string.IsNullOrWhiteSpace(text))
            return "-";

        return text.Length <= 80
            ? text
            : text.Substring(0, 80) + "...";
    }
}
