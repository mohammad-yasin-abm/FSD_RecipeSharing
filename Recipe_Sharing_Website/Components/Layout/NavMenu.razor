@using Recipe_Sharing_Website.Data
@inject IHttpContextAccessor HttpContextAccessor

<div class="top-row ps-3 navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <span class="navbar-brand">RecipeHub</span>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column p-2">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/recipes">
                Recipes
            </NavLink>
        </div>

        @if (IsLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/recipes/create">
                    Add Recipe
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/premium">
                    Premium (Demo)
                </NavLink>
            </div>

            @if (IsAdmin)
            {
                <hr />

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin">
                        Admin Panel
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/ingredients">
                        Ingredients Management
                    </NavLink>
                </div>
            }

            <hr />

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/logout">
                    Logout
                </NavLink>
            </div>
        }
        else
        {
            <hr />

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/login">
                    Login
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/register">
                    Register
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool IsLoggedIn =>
        HttpContextAccessor.HttpContext is HttpContext ctx &&
        AuthSession.IsLoggedIn(ctx.Session);

    private bool IsAdmin =>
        HttpContextAccessor.HttpContext is HttpContext ctx &&
        AuthSession.IsAdmin(ctx.Session);
}
