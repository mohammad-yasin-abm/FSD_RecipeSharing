@* Enable HeadOutlet usage inside HTML document *@
@using Microsoft.AspNetCore.Components.Web

@* Standard HTML document declaration *@
<!DOCTYPE html>
<html lang="en">
<head>
    @* Character encoding and scaling *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @* Required so relative paths resolve correctly *@
    <base href="/" />

    @* CSS resources: Bootstrap, your custom site CSS, auto-generated scoped CSS *@
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="Recipe_Sharing_Website.styles.css" />

    @* Allows Blazor components to inject content into <head> dynamically *@
    <HeadOutlet />
</head>

<body>
    @* Route container that renders the active page/component *@
    <Routes />

    @* REQUIRED script for Blazor server-side interactivity *@
    <script src="_framework/blazor.web.js"></script>
</body>
</html>
