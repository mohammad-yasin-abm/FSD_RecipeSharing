@page "/login"
 

@using Microsoft.EntityFrameworkCore
@using Recipe_Sharing_Website.Data
@using Recipe_Sharing_Website.Models

@inject IDbContextFactory<AppDbContext> DbFactory
@inject IHttpContextAccessor HttpContextAccessor
@inject NavigationManager Nav

<h3>Login</h3>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}

<EditForm Model="_vm" OnSubmit="DoLogin" FormName="LoginForm">
    <div class="mb-2">
        <label>Login as</label>
        <select class="form-control" @bind="_vm.Role">
            <option value="User">User</option>
            <option value="Admin">Admin</option>
        </select>
    </div>

    <div class="mb-2">
        <label>Username</label>
        <input class="form-control" @bind="_vm.Username" />
    </div>

    <div class="mb-2">
        <label>Password</label>
        <input class="form-control" type="password" @bind="_vm.Password" />
    </div>

    <button class="btn btn-primary" type="submit">Login</button>
    <a class="btn btn-link" href="/register">Register</a>
</EditForm>

@code {
    private string? _error;
    private LoginVm _vm = new() { Role = "User" };

    private async Task DoLogin()
    {
        _error = null;

        if (HttpContextAccessor.HttpContext is not HttpContext ctx)
        {
            _error = "Session not available. Refresh the page.";
            return;
        }

        var username = (_vm.Username ?? "").Trim();
        var password = _vm.Password ?? "";

        if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password))
        {
            _error = "Username and password are required.";
            return;
        }

        await using var db = DbFactory.CreateDbContext();

        if (_vm.Role == "Admin")
        {
            var admin = await db.Admins.FirstOrDefaultAsync(a => a.Username == username);
            if (admin is null || !BCrypt.Net.BCrypt.Verify(password, admin.PasswordHash))
            {
                _error = "Invalid admin credentials.";
                return;
            }

            ctx.Session.SetString(AuthSession.RoleKey, "Admin");
            ctx.Session.SetString(AuthSession.AdminIdKey, admin.AdminId.ToString());
            ctx.Session.Remove(AuthSession.UserIdKey);
            ctx.Session.SetString(AuthSession.NameKey, admin.Username);
        }
        else
        {
            var user = await db.Users.FirstOrDefaultAsync(u => u.Username == username);
            if (user is null || !BCrypt.Net.BCrypt.Verify(password, user.PasswordHash))
            {
                _error = "Invalid user credentials.";
                return;
            }

            ctx.Session.SetString(AuthSession.RoleKey, "User");
            ctx.Session.SetString(AuthSession.UserIdKey, user.UserId.ToString());
            ctx.Session.Remove(AuthSession.AdminIdKey);
            ctx.Session.SetString(AuthSession.NameKey, user.Username);
        }

        Nav.NavigateTo("/", true);
    }

    private class LoginVm
    {
        public string Role { get; set; } = "User";
        public string? Username { get; set; }
        public string? Password { get; set; }
    }
}
