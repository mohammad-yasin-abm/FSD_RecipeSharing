@* Route for the recipe listing page *@
@page "/recipes"

@* Enable interactive server-side rendering without prerender *@
@rendermode @(new Microsoft.AspNetCore.Components.Web.InteractiveServerRenderMode(prerender: false))

@* EF Core support *@
@using Microsoft.EntityFrameworkCore

@* Project data and model namespaces *@
@using Recipe_Sharing_Website.Data
@using Recipe_Sharing_Website.Models

@* Inject database context factory *@
@inject IDbContextFactory<AppDbContext> DbFactory

@* Inject HttpContext accessor for session info *@
@inject IHttpContextAccessor HttpContextAccessor

@inject NavigationManager Nav

@* Page heading *@
<h3>Recipes</h3>
<button class="create_recipe_button" @onclick="NavigateToCreate">Create a Recipe</button>

@* Show error message if something went wrong when loading *@
@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
@* Show loading text while recipes are being retrieved *@
else if (_recipes is null)
{
    <p>Loading...</p>
}
@* Show message when there are no recipes in the system *@
else if (_recipes.Count == 0)
{
    <p>No recipes yet.</p>
}
@* Show the list of recipes when available *@
else
{
    <ul class="list-unstyled">
        @foreach (var r in _recipes)
        {
            <li class="border rounded p-3 mb-2">
                <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                    <div>
                        <a class="fw-bold" href="/recipes/@r.RecipeId">@r.Title</a>
                        <div class="text-muted small">by @r.OwnerName</div>
                        <div class="small">⭐ Avg: @r.AvgRatingText</div>
                    </div>

                    @* Show delete controls only if user is allowed to delete *@
                    @if (CanDelete(r))
                    {
                        @* If a delete is being confirmed for this recipe *@
                        @if (_confirmDeleteRecipeId == r.RecipeId)
                        {
                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                <span class="text-danger fw-bold">Delete this recipe?</span>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteRecipeConfirmed(r.RecipeId)">Yes, delete</button>
                                <button class="btn btn-sm btn-secondary" @onclick="CancelDelete">Cancel</button>
                            </div>
                        }
                        @* Otherwise show a simple delete button *@
                        else
                        {
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => AskDelete(r.RecipeId)">Delete</button>
                        }
                    }
                </div>
            </li>
        }
    </ul>
}

@code {
    // Collection of recipes to display
    private List<RecipeRow>? _recipes;

    // Holds any error message for the UI
    private string? _error;

    // Stores the recipe ID currently in delete-confirm state
    private int? _confirmDeleteRecipeId;

    // Current logged-in user ID from session (if any)
    private int? CurrentUserId =>
        HttpContextAccessor.HttpContext?.Session.GetString(AuthSession.UserIdKey) is string s &&
        int.TryParse(s, out var id) ? id : null;

    // True if current session belongs to an admin user
    private bool IsAdmin =>
        HttpContextAccessor.HttpContext is HttpContext ctx &&
        AuthSession.IsAdmin(ctx.Session);

    // Component initialization: load the recipe list
    protected override async Task OnInitializedAsync()
    {
        await LoadRecipes();
    }

    //Navigate to recipe creation page
    private void NavigateToCreate()
    {
        Nav.NavigateTo("/recipes/create");
    }


    // Loads recipes from the database and computes average ratings
    private async Task LoadRecipes()
    {
        try
        {
            _error = null;
            await using var db = await DbFactory.CreateDbContextAsync();

            // One query per recipe for avg is okay for small demo apps.
            // If you later want performance, we can optimize to a grouped query.
            _recipes = await db.Recipes
                .Include(r => r.User)
                .OrderByDescending(r => r.RecipeId)
                .Select(r => new RecipeRow
                {
                    RecipeId = r.RecipeId,
                    Title = r.Title,
                    UserId = r.UserId,
                    OwnerName = r.User != null ? r.User.Username : "unknown"
                })
                .ToListAsync();

            foreach (var row in _recipes)
            {
                row.AvgRating = await db.Feedbacks
                    .Where(f => f.RecipeId == row.RecipeId && f.Rating != null)
                    .Select(f => (double?)f.Rating)
                    .AverageAsync();

                row.AvgRatingText = row.AvgRating.HasValue ? row.AvgRating.Value.ToString("0.0") : "—";
            }
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    // Checks whether current user (or admin) can delete this recipe
    private bool CanDelete(RecipeRow r) =>
        (CurrentUserId.HasValue && r.UserId == CurrentUserId.Value) || IsAdmin;

    // Start delete confirmation for a recipe
    private void AskDelete(int recipeId) =>
        _confirmDeleteRecipeId = recipeId;

    // Cancel delete confirmation state
    private void CancelDelete() =>
        _confirmDeleteRecipeId = null;

    // Perform actual recipe deletion and reload list
    private async Task DeleteRecipeConfirmed(int recipeId)
    {
        try
        {
            _error = null;

            await using var db = await DbFactory.CreateDbContextAsync();

            var recipe = await db.Recipes.FirstOrDefaultAsync(r => r.RecipeId == recipeId);
            if (recipe is null)
            {
                _error = "Recipe not found.";
                _confirmDeleteRecipeId = null;
                return;
            }

            // Server-side enforcement of delete rules
            if (!IsAdmin && (!CurrentUserId.HasValue || recipe.UserId != CurrentUserId.Value))
            {
                _error = "You are not allowed to delete this recipe.";
                _confirmDeleteRecipeId = null;
                return;
            }

            var feedbacks = await db.Feedbacks.Where(f => f.RecipeId == recipeId).ToListAsync();
            db.Feedbacks.RemoveRange(feedbacks);

            db.Recipes.Remove(recipe);
            await db.SaveChangesAsync();

            _confirmDeleteRecipeId = null;
            await LoadRecipes();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            _confirmDeleteRecipeId = null;
        }
    }

    // Projection class used for listing recipes with rating summary
    private class RecipeRow
    {
        public int RecipeId { get; set; }
        public string Title { get; set; } = "";
        public int UserId { get; set; }
        public string OwnerName { get; set; } = "unknown";
        public double? AvgRating { get; set; }
        public string AvgRatingText { get; set; } = "—";
    }
}
